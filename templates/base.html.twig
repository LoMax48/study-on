<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}StudyOn{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('app_course_index') }}">
            <img src="{{ asset('img/learn.png') }}" alt="" height="25px">
            StudyOn
        </a>
        <div class="d-flex flex-row align-items-center">
            {% if is_granted('ROLE_USER') %}
                <a href="{{ path('app_profile') }}" class="btn btn-success me-2">Профиль</a>
                <a href="{{ path('app_logout') }}" class="btn btn-danger me-2">Выйти</a>
            {% else %}
                <a href="{{ path('app_login') }}" class="btn btn-success me-2">Вход</a>
                <a href="{{ path('app_register') }}" class="btn btn-secondary me-2">Регистрация</a>
            {% endif %}
        </div>
    </div>
</nav>
{% block body %}{% endblock %}
</body>
</html>
