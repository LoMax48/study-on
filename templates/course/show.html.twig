{% extends 'base.html.twig' %}

{% block title %}{{ course.name }} / StudyOn {% endblock %}

{% block body %}
    <h1>{{ course.name }}</h1>
    <h3>{{ course.description }}</h3>
    <ul>
        {% for lesson in course.lessons %}
            <li><a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">{{ lesson.name }}</a></li>
        {% endfor %}
    </ul>
    <a href="{{ path('app_course_index') }}">Вернуться к списку</a>
    <a href="{{ path('app_course_edit', {'id': course.id}) }}">Редактировать</a>
    <a href="{{ path('app_lesson_new', {'course': course.id}) }}">Добавить урок</a>
    {{ include('course/_delete_form.html.twig') }}
{% endblock %}
