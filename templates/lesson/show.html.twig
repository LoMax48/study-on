{% extends 'base.html.twig' %}

{% block title %} {{ lesson.name }} / StudyOn {% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1>{{ lesson.name }}</h1>
        <h3><a href="{{ path('app_course_show', {'id': lesson.course.id}) }}">Курс {{ lesson.course.name }}</a></h3>

        <h5>{{ lesson.content }}</h5>

        {% if is_granted('ROLE_SUPER_ADMIN') %}
            <a class="btn btn-outline-primary" href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">Редактировать</a>
            {{ include('lesson/_delete_form.html.twig') }}
        {% endif %}
    </div>
{% endblock %}
